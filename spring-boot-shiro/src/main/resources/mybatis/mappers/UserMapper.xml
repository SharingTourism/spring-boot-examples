<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.andy.shiro.mapper.UserMapper">

    <resultMap id="userMap" type="com.andy.shiro.entity.rbac.User">
        <id property="uid" column="uid"/>
        <result property="name" column="name"/>
        <result property="password" column="password"/>
        <result property="username" column="username"/>
        <result property="salt" column="salt"/>
        <result property="state" column="state"/>

        <collection property="roles" ofType="com.andy.shiro.entity.rbac.Role">
            <id property="rid" column="rid"/>
            <result property="role" column="role"/>
            <result property="available" column="available"/>
            <result property="description" column="description"/>

            <collection property="permissions" ofType="com.andy.shiro.entity.rbac.Permission">
                <id property="pid" column="pid"/>
                <result property="name" column="name"/>
                <result property="url" column="url"/>
                <result property="available" column="available"/>
                <result property="parentId" column="parentId"/>
                <result property="parentIds" column="parentIds"/>
                <result property="resourceType" column="resourceType"/>
            </collection>
        </collection>
    </resultMap>

    <select id="findByUsername" parameterType="String" resultMap="userMap">
        SELECT u.*, p.*, r.*
        FROM sys_user u
            INNER JOIN sys_user_role ur on u.uid = ur.user_id
            INNER JOIN sys_role r on r.rid = ur.role_id
            INNER JOIN sys_permission_role pr on pr.permission_id = r.rid
            INNER JOIN sys_permission p on p.pid = pr.id
        WHERE u.username = #{username}
    </select>

</mapper>